<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="25dp"
            app:cardPreventCornerOverlap="true"
            app:cardMaxElevation="12dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/invite_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/robotomedium"
                android:text="+ INVITE"
                android:visibility="invisible"
                android:textColor="@color/netclan_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="10dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:text="Manash Harsh vardhan"
                    android:textColor="@color/netclan_color" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotomedium"
                        android:text="Greater Noida "
                        android:textColor="@color/blue"
                        android:textSize="10sp" />


                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/within_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotomedium"
                        android:text="Within"
                        android:textColor="@color/netclan_color"
                        android:textSize="10sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/distance_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/robotomedium"
                        android:text="200-300 m"
                        android:textColor="@color/netclan_color"
                        android:textSize="10sp" />

                </LinearLayout>



                <ProgressBar
                    android:id="@+id/profileCompletionProgress"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="4dp"
                    android:progress="50"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/custom_progress_bg"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/circle_shape_blue"
                        android:src="@drawable/sharp_call_24" />
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/circle_shape_blue"
                        android:src="@drawable/geo_fill"
                        android:layout_marginStart="10dp"/>

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/circle_shape_blue"
                        android:src="@drawable/person_fill_add"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>



            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="160dp"
                android:orientation="vertical">



                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi community ! I am available at your service"

                    android:textColor="@color/netclan_color_light"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caterer"
                    android:textColor="@color/netclan_color_light"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="12dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="78dp"
            android:layout_height="86dp"
            android:layout_marginEnd="-45dp"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView"
            app:layout_constraintEnd_toStartOf="@+id/materialCardView"
            app:layout_constraintTop_toTopOf="@+id/materialCardView"
            app:layout_constraintVertical_bias="0.32"
            app:cardElevation="14dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:scaleType="fitXY"


                android:src="@drawable/ph" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>